= Haml::Engine.new(File.read "#{Dir.pwd}/pinidea/src/partial/detail.haml").render do
  - capture_haml do
    .page-me.detail{:data => {:nav => :me}}
      .header
        .set.info
          .item.back
            %a.back{:href => 'me-0-config.html'}
              %i.fa.fa-chevron-left
            .title 通知设置
      .info-detail
        .set.info
          .item.info.desc
            %span 你可以选择何时会收到通知
          .item.info.setting
            .t 我发起的议题被投票时
            %a.toggler.on{:href => 'javascript:;'}
          .item.info.setting
            .t 我发起的议题增加选项时
            %a.toggler.on{:href => 'javascript:;'}
          .item.info.setting
            .t 我创建的选项被投票时
            %a.toggler.off{:href => 'javascript:;'}
          .item.info.setting
            .t 我参加的议题增加选项时
            %a.toggler.on{:href => 'javascript:;'}
